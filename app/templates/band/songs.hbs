<div class="row">  <ul class="list-group songs">    {{#if canCreateSong}}      <div class="list-group-item">        <form {{action "createSong" on="submit"}} >        {{input type="text" class="new-song" placeholder="New song" value=title}}        <button type="submit" class="new-song-button" disabled={{isAddSongButtonDisabled}}>Add</button>        </form>      </div>    {{/if}}    {{#each model as |song|}}      <li class="list-group-item song">        {{song.title}}        {{star-rating item=song rating=song.rating setAction="updateRating"}}      </li>      {{/each}}    </ul>    {{#unless canCreateSong}}      <div class="list-group-item empty-list">        <div class="empty-message">          There are no songs yest. Why don't you <a href="#" {{action "enableSongCreation"}}>create one?</a>        </div>      </div>    {{/unless}}</div>